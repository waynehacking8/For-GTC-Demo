### CREATE A .env FILE IN THE ROOT DIRECTORY OF THE PROJECT AND COPY OVER THESE ENVIRONMENT VARIABLES ###

# Postgresql db credentials
DATABASE_URL="postgres://username:password@localhost:port/db-name"

# Auth.js auth secret (Can be generated by running `npx auth secret`. For more info: https://cli.authjs.dev)
AUTH_SECRET="your-auth-secret-key" 

# Public Origin URL
PUBLIC_ORIGIN="https://your-domain.com"

# Node Environment (e.g. production or development)
NODE_ENV="production"

### ANY ENVIRONMENT VARIABLES BELOW THIS LINE ARE OPTIONAL AND CAN BE CONFIGURED VIA THE ADMIN DASHBOARD INSTEAD ###

# OpenRouter API Key (unified API for all text generation models)
# Get from: https://openrouter.ai/settings/keys
OPENROUTER_API_KEY="your-openrouter-api-key"

# Replicate API Token (unified API for all image and video generation models)
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN="your-replicate-api-token"

# Stripe API Keys (get from Stripe Dashboard)
PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_key"
STRIPE_SECRET_KEY="sk_test_key"
STRIPE_WEBHOOK_SECRET="whsec_key"
# NOTE: Pricing plans are managed through the Admin Dashboard at /admin/settings/plans
# The pricing plan seeder will create initial placeholder plans that you can update via the admin interface

# Google OAuth credentials (get from Google Cloud Console)
AUTH_GOOGLE_ID="your-google-client-id"
AUTH_GOOGLE_SECRET="your-google-client-secret"

# Facebook OAuth credentials (get from Meta for Developers)
AUTH_FACEBOOK_ID="your-facebook-app-id"
AUTH_FACEBOOK_SECRET="your-facebook-app-secret"

# X (Twitter) OAuth credentials (get from X Developer Portal)
AUTH_TWITTER_ID="your-twitter-client-id"
AUTH_TWITTER_SECRET="your-twitter-client-secret"

# Apple OAuth credentials (get from Apple Developer Console)
AUTH_APPLE_ID="your-apple-client-id"
AUTH_APPLE_SECRET="your-apple-client-secret"

# Cloudflare R2 Storage (Optional - fallback to local storage if not configured in admin dashboard or here)
# Get credentials from Cloudflare dashboard > R2 Object Storage > Manage R2 API tokens
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="your-r2-bucket-name"
R2_PUBLIC_URL="https://your-bucket.your-account-id.r2.cloudflarestorage.com"

# Cloudflare Turnstile (Bot protection for registration and forms)
# Get from Cloudflare dashboard > Turnstile > Add site
TURNSTILE_SITE_KEY="your-turnstile-site-key"
TURNSTILE_SECRET_KEY="your-turnstile-secret-key"
# For local testing, you can use Cloudflare's dummy keys:
# Always passes (visible): 1x00000000000000000000AA
# Always blocks (visible): 2x00000000000000000000AB  
# Always passes (invisible): 1x00000000000000000000BB
# Forces interactive challenge: 3x00000000000000000000FF
# Dummy secret key (always passes): 1x0000000000000000000000000000000AA

# SMTP Email Configuration (for transactional emails)
# Configure these to enable automated emails (welcome, notifications, etc.)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@your-domain.com"
FROM_NAME="AI Platform"

# Demo Mode Configuration
# Enables read-only demonstration mode when set to true
# In demo mode: all save operations are disabled, users can only access selected AI models
# Perfect for showcasing the platform safely without allowing modifications
# Default: false (when missing or set to anything other than 'true')
DEMO_MODE=false